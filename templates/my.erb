# MANAGED BY PUPPET!
[client]
<% if port -%>
port		= <%= port %>
<% else -%>
port        = 3306
<% end -%>
<% if socket -%>
socket		= <%= socket %>
<% else -%>
socket      = /var/lib/mysql/mysql.sock
<% end -%>

[mysqld]
<% if port -%>
port		= <%= port %>
<% else -%>
port        = 3306
<% end -%>
<% if socket -%>
socket		= <%= socket %>
<% else -%>
socket      = /var/lib/mysql/mysql.sock
<% end -%>

<% if skip-locking -%>
skip-locking
<% end -%>

key_buffer_size = 16K

<% if max_allowed_packet -%>
max_allowed_packet = <%= max_allowed_packet %>
<% else -%>
max_allowed_packet = 1M
<% end -%>
<% if table_open_cache -%>
table_open_cache = <%= table_open_cache %>
<% else -%>
table_open_cache = 4
<% end -%>

sort_buffer_size = 64K
read_buffer_size = 256K
read_rnd_buffer_size = 256K
net_buffer_length = 2K
thread_stack = 128K

server-id	= 1




[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 8M
sort_buffer_size = 8M

[mysqlhotcopy]
interactive-timeout